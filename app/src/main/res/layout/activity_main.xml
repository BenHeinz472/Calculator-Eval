<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <net.pubnative.lite.sdk.views.HyBidBannerAdView
        android:id="@+id/hybid_banner"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/LCDFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="120sp"
        android:gravity="end"
        android:layout_above="@+id/buttonsGrid"
        android:text="0"/>

    <!--debugging purposes-->
    <TextView
        android:id="@+id/Input1Frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LCDFrame"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="start"
        android:text=""
        android:textSize="64sp" />

    <TextView
        android:id="@+id/OperatorFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LCDFrame"
        android:layout_toEndOf="@+id/Input1Frame"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textSize="64sp" />

    <TextView
        android:id="@+id/Input2Frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LCDFrame"
        android:layout_toEndOf="@+id/OperatorFrame"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="64sp" />


    <LinearLayout
        android:id="@+id/buttonsGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button android:id="@+id/num7" style="@style/MyButton" android:text="7" />
            <Button android:id="@+id/num8" style="@style/MyButton" android:text="8" />
            <Button android:id="@+id/num9" style="@style/MyButton" android:text="9" />
            <Button android:id="@+id/fDiv" style="@style/MyButton" android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button android:id="@+id/num4" android:text="4" style="@style/MyButton"/>
            <Button android:id="@+id/num5" android:text="5" style="@style/MyButton"/>
            <Button android:id="@+id/num6" android:text="6" style="@style/MyButton"/>
            <Button android:id="@+id/fMul" android:text="*" style="@style/MyButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button android:id="@+id/num1" android:text="1" style="@style/MyButton"/>
            <Button android:id="@+id/num2" android:text="2" style="@style/MyButton"/>
            <Button android:id="@+id/num3" android:text="3" style="@style/MyButton"/>
            <Button android:id="@+id/fSub" android:text="-" style="@style/MyButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button android:id="@+id/num0" android:text="0" style="@style/MyButton"/>
            <Button android:id="@+id/fClr" android:text="C" style="@style/MyButton"/>
            <Button android:id="@+id/fCalc" android:text="=" style="@style/MyButton"/>
            <Button android:id="@+id/fAdd" android:text="+" style="@style/MyButton"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp" />

</RelativeLayout>